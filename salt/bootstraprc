DISTRIB_CODENAME=${DISTRIB_CODENAME:-'xenial'}
FORMULA_REVISION=${FORMULA_REVISION:-'nightly'}
FORMULA_REPOSITORY_URL=${FORMULA_REPOSITORY_URL:-deb [arch=amd64] http://apt.mirantis.com/${DISTRIB_CODENAME} ${FORMULA_REVISION} salt}
FORMULA_REPOSITORY_GPG=${FORMULA_REPOSITORY_GPG:-http://apt.mirantis.com/public.gpg}

RECLASS_ADDRESS=${RECLASS_ADDRESS:-https://github.com/salt-formulas/openstack-salt.git}
RECLASS_BRANCH=${RECLASS_BRANCH:-master}

BOOTSTRAP_SALTSTACK_COM=${BOOTSTRAP_SALTSTACK_COM:-"https://bootstrap.saltstack.com"}
BOOTSTRAP_SALTSTACK_VERSION=${BOOTSTRAP_SALTSTACK_VERSION:- stable 2016.3 }
BOOTSTRAP_SALTSTACK_VERSION=${BOOTSTRAP_SALTSTACK_VERSION//latest*/stable}

ENABLED_SERVICES="salt-master,salt-minion"

MY_IP=`default_host_ip`
LOCAL_HOSTNAME=`hostname -s`
LOCAL_DOMAINNAME=`hostname -d`

SALT_MASTER_IP=${SALT_MASTER_IP:-${MY_IP}}
SALT_MASTER_HOST=${SALT_MASTER_HOST:-${SALT_MASTER_IP}}

SALT_MINION_ID=${SALT_MINION_ID:-${LOCAL_HOSTNAME}.${LOCAL_DOMAINNAME}}
SALT_MASTER_ID=${SALT_MASTER_ID:-${LOCAL_HOSTNAME}.${LOCAL_DOMAINNAME}}
